rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Match the user's specific document path
    match /users/{userId} {
      // Allow read, create, update, delete ONLY by the authenticated user themselves
      allow read, write: if request.auth != null && request.auth.uid == userId; // <-- Grant write permission here

      // --- Journal Entries Subcollection ---
      match /journalEntries/{entryId} {
        // Allow read/write ONLY by the owner of the parent user document
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Add rules for any other collections here...

    // Deny all other access by default (implicitly)
  }
}